// This theme requires WordPress 5.3 or later.
if ( version_compare( $GLOBALS['wp_version'], '5.3', '<' ) ) {
	require get_template_directory() . '/inc/back-compat.php';
}

function ffiobaseStyle() {
    wp_enqueue_style('ffiobase-style', get_stylesheet_directory_uri() .'/style.css', array(), '2' );       
}
add_action('wp_enqueue_scripts', 'ffiobaseStyle');

if ( ! function_exists( 'ffiobase_setup' ) ) {

    function ffiobase_setup() {

        // Defintely add this load_theme_textdomain( 'ffiobase', get_template_directory() . '/languages' );

        /**
         * Add post-formats support.
         */
        add_theme_support(
            'post-formats',
            array(
            )
        );

        /*
         * Enable support for Post Thumbnails on posts and pages.
         *
         * @link https://developer.wordpress.org/themes/functionality/featured-images-post-thumbnails/
         */
        add_theme_support( 'post-thumbnails' );
        set_post_thumbnail_size( 1568, 9999 );

        register_nav_menus(
            array(
                'primary' => esc_html__( 'Primary menu', 'ffiobase' ),
                'footer'  => __( 'Secondary menu', 'ffiobase' ),
            )
        );

        /*
         * Switch default core markup for search form, comment form, and comments
         * to output valid HTML5. (Recheck these.)
         */
        add_theme_support(
            'html5',
            array(
                'comment-form',
                'comment-list',
                'gallery',
                'caption',
                'style',
                'script',
                'navigation-widgets',
            )
        );


    }
}
add_action( 'after_setup_theme', 'ffiobase_setup' );
